<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopControlsContainer">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ControlsContainer">
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/converter_controls_background</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">@dimen/converter_label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/converter_controls_padding</item>
        <item name="android:paddingLeft">@dimen/converter_controls_padding</item>
    </style>

</resources>
